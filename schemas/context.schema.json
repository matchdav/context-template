{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/context.schema.json",
  "title": "Work Context Configuration (Template)",
  "type": "object",
  "required": ["version", "user", "jira", "github", "tools"],
  "properties": {
    "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
    "user": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "email": {"type": "string", "format": "email"}
      },
      "additionalProperties": false
    },
    "jira": {
      "type": "object",
      "required": ["project", "boardUrl"],
      "properties": {
        "project": {"type": "string"},
        "boardUrl": {"type": "string", "format": "uri"}
      },
      "additionalProperties": false
    },
    "github": {
      "type": "object",
      "required": ["username", "repositories"],
      "properties": {
        "username": {"type": "string"},
        "repositories": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path", "shortname", "remote", "trunk", "url"],
            "properties": {
              "name": {"type": "string"},
              "path": {"type": "string"},
              "shortname": {"type": "string"},
              "remote": {"type": "string"},
              "trunk": {"type": "string"},
              "url": {"type": "string", "format": "uri"},
              "services": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "name", "entry", "language"],
                  "properties": {
                    "id": {"type": "string"},
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "entry": {"type": "string"},
                    "language": {"type": "string"},
                    "tags": {"type": "array", "items": {"type": "string"}},
                    "status": {"type": "string"}
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "tools": {
      "type": "object",
      "patternProperties": {
        ".+": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
